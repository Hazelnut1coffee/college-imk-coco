<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <me.firmannizammudin.coco.utils.RoundedImageView
        android:id="@+id/main_iv_navheader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/im_photo_profile"
        android:layout_marginTop="@dimen/object_small_margin" />

    <TextView
        android:id="@+id/main_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/object_small_margin"
        android:text="@string/main_nav_name"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/main_txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_nav_username"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>