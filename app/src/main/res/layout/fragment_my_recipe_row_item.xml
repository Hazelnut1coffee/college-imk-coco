<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin">

    <ImageView
        android:id="@+id/myrecipe_iv_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/im_rendang"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:alpha="0.5"
        android:background="@color/colorPrimary"
        android:layout_alignBottom="@id/myrecipe_iv_photo" />

    <TextView
        android:id="@+id/myrecipe_txt_foodname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Rendang Padang"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/object_small_margin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBottom="@id/myrecipe_iv_photo"/>
</RelativeLayout>